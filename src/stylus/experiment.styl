transform()
    -webkit-transform: arguments
    -moz-transform: arguments
    -o-transform: arguments
    -ms-transform: arguments
    transform: arguments
    
transition()
    -webkit-transition: arguments
    -moz-transition: arguments
    -o-transition: arguments
    -ms-transition: arguments
    transition: arguments

*, *:before, *:after
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

blueColor = #5a72cb

.blue
    color #5a72cb

.red
    color #fe5151

.wrapper 
    width 100%
    max-width 1024px
    margin 0 auto

body 
    overflow hidden

header 
    width: 100%
    height 50px
    font-family: "OpenSans-bold"

    > div 
        width 100%
        height 50px

    .main
        background #fff
        position absolute
        z-index 1

    .icon-home 
        
        color #5a72cb
        width 50px
        height 50px
        position relative
        text-align center
        line-height 50px
        transition all .3s ease-out 0s
        float left
        display block
        text-decoration none

        .background 
            position absolute
            bottom 0
            width 100%
            height 5px
            background #5a72cb
            transition all .2s ease-out
            z-index 0


        &:hover 
            
            color #fff
            transition all .3s ease-out 0s

            .background
                height 100%

    .date
        width 135px
        height 50px
        float left
        border-left 1px solid rgba(0, 0, 0, .2)
        border-right 1px solid rgba(0, 0, 0, .2)
        padding 0 10px
        line-height 50px

        .day 
            float left
            margin 0 10px 0 0

            .red
                margin 0 0 0 5px

        .more 
            width 35px
            height 35px
            border-radius 18px
            border: 2px solid rgba(90, 114, 203, .5)
            float right
            cursor pointer
            margin 7px 0 0 0
            transition all .15s linear
            -webkit-transform-origin 50% 50%
            background url("/img/more-day-btn.png") no-repeat center -30px

            &:hover,
            &.opened
                border: 2px solid rgba(90, 114, 203, 1)

            &.opened
                background url("/img/more-day-btn.png") no-repeat center 10px
            

    .desc
        width auto
        height 50px
        padding 0 0 0 10px 
        line-height 50px
        float left

        .author 
            text-transform uppercase

    .social 
        float right

        .share,
        .follow
            float left
            width auto
            height 50px
            border-left 1px solid rgba(0, 0, 0, .2)
            text-align center
            line-height 58px
            padding 0 10px

        .share
            border-right 1px solid rgba(0, 0, 0, .2)

            iframe 
                width 82px !important

    .calendar 
        background #f4f4f4
        overflow hidden
        position absolute
        top 0px
        transition(all 0.3s ease)
        z-index 0

        ul 
            padding 0 0 0 185px

            li 
                display block
                float left 
                text-align center
                width 25px
                height 50px
                line-height 50px
                color #5a72cb
                transition all .3s linear
                position relative
                cursor pointer

                &:before
                    id:'test';
                    z-index: 0;
                    position:absolute;
                    width:100px;
                    height:100px;
                    left:0;
                    top:0;
                    content: url('/img/calendar-thumbs-holder.jpg');
                    opacity:0
                    background blueColor
                    

                    &:hover
                        opacity:0

            &.day-1

                &:before
                    content: url('./img/01/preview100x50.jpg');



                &:hover 
                    width 100px

                    &:before
                        opacity:1
                        transition all .15s linear

        &.show 
            transform( translate(0, 50px) )

iframe 
    padding 0
    margin 0

                    



        














        