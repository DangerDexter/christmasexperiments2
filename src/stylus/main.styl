redColor = #fe5151
blueColor = #5a72cb

// Macro
transform()
    -webkit-transform: arguments
    -moz-transform: arguments
    -o-transform: arguments
    -ms-transform: arguments
    transform: arguments
transition()
    -webkit-transition: arguments
    -moz-transition: arguments
    -o-transition: arguments
    -ms-transition: arguments
    transition: arguments
transitionDelay()
    -webkit-transition-delay: arguments
    -moz-transition-delay: arguments
    -o-transition-delay: arguments
    -ms-transition-delay: arguments
    transition-delay: arguments
transformOrigin()
    -webkit-transform-origin: arguments
    -moz-transform-origin: arguments
    -o-transform-origin: arguments
    -ms-transform-origin: arguments
    transform-origin: arguments

.blue
    color redColor

.red
    color blueColor

*, *:before, *:after
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box


// START
body, html
    width 100%
    height 100%
    min-height 100%
    min-width 100%
    font-family: 'Open Sans', sans-serif;
    font-size: 12px
    font-weight: 400
    background #f4f4f4

header
    
    width 100%
    height 337px
    

    #title
        opacity 1
        width 100%
        height 337px
        background #FFF
        z-index 2
        top -337px
        left 0
        text-align center
        display table

        a
            text-decoration none

        .inner
            transition(all 0.2s ease)
            width 100%
            max-width 502px
            height 327px
            margin 5px
            border 1px solid #f4f4f4
            background #FFF
            display table-cell
            vertical-align middle

        .deco
            text-decoration none
            margin auto
            display block
            width 13px
            height 21px

        .the
            text-decoration none
            padding-top 29px
            display block
            font-size 14px
            color #5a72cb

        .christmas
            text-decoration none
            display block
            font-size 36px
            font-weight 800
            color #fe5151
            text-transform uppercase
            letter-spacing 6px
            margin-top -2px

        .experiments
            text-decoration none
            display block
            font-size 18px
            font-weight 800
            color #5a72cb
            text-transform uppercase
            letter-spacing 3px
            margin-top -2px

        sub 
            text-decoration none
            display block
            padding-top 25px
            color #7694c2
            font-size 14px
            letter-spacing 2.5px

        a.about
            display block
            text-transform uppercase
            text-decoration underline
            color #5a72cb
            padding-top 27px
            letter-spacing 2.4px

        .share
            opacity 1
            transition(all .6s ease-out)
            transitionDelay(2.1s)
            padding-top 37px

        #twitter-widget-0
            padding-left 5px

.dayProject
    
    width 100%
    max-width 1024px
    height 348px

    .left,
    .right 
        width 50%
        height 100%
        float left

    .left 
        background redColor
        display table
        text-align center
        color #fff

        .inner 

            width auto
            height 131px
            display table-cell
            vertical-align middle

            .look 
                text-transform uppercase
                font-size 1rem
                font-family "OpenSans-bold"
                letter-spacing 3px

            a 
                color #fff 
                display block

            h2 
                font-family "OpenSans-bold"
                font-size 1.9rem
                letter-spacing 3px
                margin 15px 0

            .author 
                font-family "OpenSans-italic"
                margin 0 0 5px 0

                a 
                    margin 10px 0
                    font-family "OpenSans-bold"
                    text-transform uppercase

    .right
        opacity 1
        overflow hidden
        cursor pointer
        position relative

        .content
                background url("./../img/01/featured.jpg") no-repeat center center
                background-size auto auto
                height 100%
                width 100%
                position relative
                transition(all 0.8s ease-out)

                .day
                    transition(all 0.4s ease)
                    position absolute
                    top 50%
                    left 50%
                    margin-left -38px
                    margin-top -35px
                    z-index 10
                    background #FFF
                    // margin auto
                    // margin-top 135px
                    width 70px
                    height 70px
                    padding-top 19px
                    font-size 30px
                    color #dd4b39
                    border-bottom 5px solid #dd4b39
                    text-align center
                    transitionDelay(.4s)

        

        .mask
                position absolute
                top 0 
                left 0
                opacity .3
                background #011437
                width 50%
                min-height 100%
                height 100%
                z-index 8
                left 0
                transition(all 0.8s ease-out)
                transform(perspective(300px) rotateX(0deg) rotateY(0deg) rotateZ(0deg))

        &:hover
                .content
                        transform(scale(1.2))
                .mask
                        left -50%
                        transform(perspective(300px) rotateX(0deg) rotateY(90deg) rotateZ(0deg))
                .mask2
                        left auto
                        right -50%
                        transform(perspective(300px) rotateX(0deg) rotateY(-90deg) rotateZ(0deg))
                .day
                        transitionDelay(0s)
                        opacity 0
                        transform( scale(1.3) )
                .open
                        transition(all 0.35s ease-out)
                        transform(scale(1) )
                        transitionDelay(.225s)
                        margin-top -38px
                        opacity 1
                        transform(perspective(1200px))
                        line-height 40px


        .mask2
                left auto
                right 0

        .open
                // transform(perspective(1000px))
                transition(all 0.6s ease)
                transitionDelay(0s)
                transform(scale(.85))
                opacity 0
                position absolute
                top 50%
                left 50%
                margin-left -70px
                margin-top -28px
                z-index 10
                background rgba(1, 20, 55, .3)
                width 140px
                height 40px
                font-size 14px
                color #FFF
                text-align center
                line-height 10px


.intro 
    color blueColor
    text-align center
    margin 30px 0
    font-size 1.2rem
    font-family "OpenSans-regular"

.artists
    width 100%
    overflow auto

section.artist

    background #FFF
    width 22%
    color #dd4b39
    text-align center
    margin 1.5%
    float left
    position relative

    .corner
        position absolute
        top 0 
        right 0
        width 0px
        height 0px
        border-style solid
        border-width 45px 0 0 45px
        border-color transparent transparent transparent #f1f1f1

    .number
        font-weight 300
        font-size 72px
        padding-top 40px
        display block
        margin auto

    h5
        display block
        text-transform uppercase
        font-size 14px
        font-weight 600
        letter-spacing 2px
        padding-top 25px

    .author

        color #dd4b39
        display block
        font-size 11px
        font-weight 600
        letter-spacing 1px
        padding-bottom 20px

    .ice 
        display block
        margin auto
        padding-top 20px
        width 15px
        height 16px

    .preview
        position relative
        height 182px
        overflow hidden

        a
            opacity 0
            display block
            margin auto

        .img
            position absolute
            top 0
            left 0
            height 182px
            width 100%
            z-index 2

            &.prev1
                background url("./../img/01/preview.jpg") no-repeat center center

        .triangle1
            position absolute
            top 0
            left 0
            z-index 4
            width 0px
            height 0px
            border-style solid
            border-width 60px 240px 0 0
            border-color #ffffff transparent transparent transparent

        .mask 
            z-index 3
            position absolute
            top 0
            left 0

            background #011437
            opacity .6
            height 182px
            width 100%

footer
    margin auto
    text-align center

    .share
        padding 30px 0

        .fb_iframe_widget
            margin-right 5px


@media screen and (max-width:900px)
    
    header
        #title

            .inner 
                width 96%

    section.artist
        width 30%
        margin 1.6%

@media screen and (max-width:630px)
    header
        height 200px
        #featured
            display none

        #title
            width 100%
            height 200px
            .inner 
                height 200px
                width 100%
                border none

                .the
                    padding-top 10px

            .deco
                padding-top 20px
            //  display none
            sub
                display none

            a.about 
                display none

    #dayProject
        margin-top 0
        height 270px
        .look 
            padding-top 50px
        .arrow 
            display none
        .discover
            display none


    section.artist
        width 96%
        margin 2%

@media screen and (min-width:1024px)
    #main
        width 1024px
